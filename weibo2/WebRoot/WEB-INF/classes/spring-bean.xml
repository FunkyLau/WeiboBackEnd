<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 配置Admins -->
	<bean id="admins" class="com.domain.Admins" scope="singleton" lazy-init="default"/>
	
	<!-- 配置Pictures -->
	<bean id="pictures" class="com.domain.Pictures" scope="singleton" lazy-init="default"/>
	
	<!-- 配置Messages -->
	<bean id="messages" class="com.domain.Messages" scope="singleton" lazy-init="default"/>
</beans>